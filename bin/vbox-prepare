#!/bin/bash

## clone a VM and assign a static IP address and a FQDN

cd `dirname "$0"`

SOURCE="$1"
TARGET="$2"
FQDN="$3"
LAST_OCTET="$4"

if [ $# -eq 0 ]; then
    echo "usage:  $0 Wheezy Local local 27"
    exit 1
fi

sudo echo -n

echo "== preparing $TARGET =="
vbox-clone "$SOURCE" "$TARGET"
vbox-mount "$TARGET"
sudo ./vbox-customize "$FQDN" "$LAST_OCTET"
vbox-umount
