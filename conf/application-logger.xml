<configuration>
    
  <conversionRule conversionWord="coloredLevel" converterClass="play.api.Logger$ColoredLevel" />
  
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
     <file>${application.home}/logs/application.log</file>
     <encoder>
       <pattern>%date [%level] %logger{15} - %message%n%xException{40}</pattern>
     </encoder>
   </appender>

  <appender name="ORDERS" class="ch.qos.logback.core.FileAppender">
    <file>${application.home}/logs/orders.log</file>
    <encoder>
      <pattern>%date [%level] %message%n%xException{40}</pattern>
    </encoder>
  </appender>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%coloredLevel %logger - %message%n%xException{40}</pattern>
    </encoder>
  </appender>
  
  <logger name="play" level="INFO" />
  <logger name="application" level="INFO" />
  <logger name="org.w3.vs" level="DEBUG" />
  <logger name="org.w3.vs.actor" level="INFO" />
  <logger name="org.w3.vs.http" level="INFO" />
  <logger name="org.w3.vs.assertor" level="DEBUG" />
  <logger name="org.w3.vs.controllers.OneTimeJob" level="DEBUG">
      <appender-ref ref="ORDERS" />
  </logger>
  <logger name="org.eclipse.jetty.server" level="INFO"/>
  <logger name="com.gargoylesoftware.htmlunit" level="OFF" />

  <!-- activate those loggers for more resource fetching info -->
  <!--logger name="org.w3.vs.actor.JobActor" level="DEBUG" />  
  <logger name="org.w3.vs.http.Cache" level="DEBUG" /-->

  <root level="INFO">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </root>
  
</configuration>
