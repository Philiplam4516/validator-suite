<configuration>
    
  <conversionRule conversionWord="coloredLevel" converterClass="play.api.Logger$ColoredLevel" />
  
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
     <file>${application.home}/logs/application.log</file>
     <encoder>
       <pattern>%date [%level] %logger{15} - %message%n%xException{40}</pattern>
     </encoder>
   </appender>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%coloredLevel %logger{15} - %message%n%xException{40}</pattern>
    </encoder>
  </appender>
  
  <!--appender name="STDOUTCALLER" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%coloredLevel %logger{15} %caller{2} - %message%n%xException{40}</pattern>
    </encoder>
  </appender-->

  <logger name="play" level="INFO" />
  <logger name="application" level="INFO" />
  <logger name="org.w3.vs" level="DEBUG" />
  <logger name="Controller.Validator" level="DEBUG" />
  <logger name="org.eclipse.jetty.server" level="INFO">
    <appender-ref ref="STDOUT" />
  </logger>

  <root level="ERROR">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </root>
  
</configuration>
