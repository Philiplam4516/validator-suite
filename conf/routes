# Routes
# This file defines all application routes (Higher priority routes first)

# Application
GET     /suite                                            controllers.Application.index
GET     /suite/login                                      controllers.Application.login
POST    /suite/login                                      controllers.Application.authenticate
POST    /suite/logout                                     controllers.Application.logout
GET     /suite/register                                   controllers.Application.register
POST    /suite/register                                   controllers.Application.registerAction

# Jobs
GET     /suite/jobs                                       controllers.Jobs.index
POST    /suite/jobs                                       controllers.Jobs.create
GET     /suite/jobs/new                                   controllers.Jobs.newJob
GET     /suite/jobs/socket/:socket                        controllers.Jobs.socket(socket: SocketType.SocketType)

# Job
GET     /suite/jobs/:job                                  controllers.Job.get(job: JobId)
POST    /suite/jobs/:job                                  controllers.Job.dispatcher(job: JobId)
GET     /suite/jobs/:job/edit                             controllers.Job.edit(job: JobId)
GET     /suite/jobs/:job/socket/:socket                   controllers.Job.socket(job: JobId, socket: SocketType)

# Job/assertions
GET     /suite/jobs/:job/assertions                       controllers.Assertions.index(job: JobId, resource: Option[URL])
GET     /suite/jobs/:job/assertions/socket/:socket        controllers.Assertions.socket(job: JobId, resource: Option[URL], socket: SocketType)

# Job/assertors
GET     /suite/jobs/:job/assertors                        controllers.Assertors.index(job: JobId, resource: Option[URL])
GET     /suite/jobs/:job/assertors/socket/:socket         controllers.Assertors.socket(job: JobId, resource: Option[URL], socket: SocketType)

# Job/resources
GET     /suite/jobs/:job/resources                        controllers.Resources.index(job: JobId, resource: Option[URL])
GET     /suite/jobs/:job/resources/socket/:socket         controllers.Resources.socket(job: JobId, resource: Option[URL], socket: SocketType)

##########################
# Map static resources from the /public folder to the /assets URL path
GET     /suite/public/*file                                     controllers.Assets.at(path="/public", file)

# Adds an Assets controller to expose javascript sources directly during development
# Because Play changes the signature of routes.Assets.at() depending on whether there is a single assets controller or
# more i added a dummy controller that serves files from nowhere. The switch has to be done manually.
#GET     /no_folder/*file                                       controllers.Assets.at(path="/no_folder", file)
GET     /suite/dev/scripts/*file                                controllers.Assets.at(path="/app/assets/scripts", file)
