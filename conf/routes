# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Index
GET     /                           controllers.Validator.index()

# Dashboard
GET     /dashboard                  controllers.Validator.dashboard()

# Jobs
GET     /job/:id                    controllers.Validator.showJob(id: java.util.UUID)
# HTML5 does not support PUT and DELETE methods!
#PUT     /job/:id                    controllers.Validator.updateJob(id: java.util.UUID)
#DELETE  /job/:id                    controllers.Validator.deleteJob(id: java.util.UUID)
# Workaround 1:
GET     /job/:id/delete             controllers.Validator.deleteJob(id: java.util.UUID)
POST    /job/:id                    controllers.Validator.updateJob(id: java.util.UUID)
# Workaround 2: jobDispatcher checks if a http-method parameter (= put|delete) is passed with the form and dispatch to the correct action 
#POST    /job/:id                    controllers.Validator.jobDispatcher(id: java.util.UUID)

GET     /job/:id/edit               controllers.Validator.editJob(id: java.util.UUID)
GET     /job                        controllers.Validator.newJob()
POST    /job                        controllers.Validator.createJob()

# Authentication
GET     /login                      controllers.Application.login
POST    /login                      controllers.Application.authenticate
GET     /logout                     controllers.Application.logout

# Observations
POST    /observation                controllers.Validator.validate()
GET     /observation/:id            controllers.Validator.redirect(id: String)
#GET     /observation/:id/test       controllers.Validator.test(id: java.util.UUID)
GET     /observation/:id/ws         controllers.Validator.subscribe(id: String)
GET     /observation/:id/stop       controllers.Validator.stop(id: String)

# /jobs
# /job/:id
# /job/:id/url

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
