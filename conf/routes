# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Index
GET     /                           controllers.Validator.index()
GET     /dashboard                  controllers.Validator.dashboard()

# Authentication
GET     /login                      controllers.Application.login
POST    /login                      controllers.Application.authenticate
GET     /logout                     controllers.Application.logout

# Observations
POST    /observation                controllers.Validator.validate()
GET     /observation/:id            controllers.Validator.redirect(id)
GET     /observation/:id/ws         controllers.Validator.subscribe(id)
GET     /observation/:id/stop       controllers.Validator.stop(id)

# /jobs
# /job/:id
# /job/:id/url

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
