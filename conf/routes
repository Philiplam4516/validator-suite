# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Indexes
GET     /                           controllers.Demo.index()
GET     /dashboard                  controllers.Dashboard.dashboard()

# Jobs
GET     /job                        controllers.Dashboard.editJob(id: Option[UUID] = None)
GET     /job/:id/edit               controllers.Dashboard.editJob(id: Option[UUID])

POST    /job                        controllers.Dashboard.createOrUpdateJob(id: Option[UUID] = None)
# delete, run, stop or put are all POSTed actions, handled by jobDispatcher
POST    /job/:id                    controllers.Dashboard.jobDispatcher(id: UUID)
GET     /job/:id                    controllers.Report.showReport(id: UUID)
GET     /jobs                       controllers.Dashboard.dashboardSocket()

# Authentication
GET     /login                      controllers.Application.login
POST    /login                      controllers.Application.authenticate
GET     /logout                     controllers.Application.logout

# Observations
POST    /observation                controllers.Demo.validate()
GET     /observation/:id            controllers.Demo.redirect(id: String)
GET     /observation/:id/ws         controllers.Demo.subscribe(id: String)
GET     /observation/:id/stop       controllers.Demo.stop(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
